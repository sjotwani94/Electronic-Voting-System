<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_green"
    android:id="@+id/scroller"
    android:fillViewport="true"
    tools:context=".AddNoticeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/content_credentials"
            android:layout_width="380dp"
            android:layout_height="520dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_selector_white">

            <EditText
                android:id="@+id/subject_notice"
                android:layout_width="350dp"
                android:layout_marginTop="100dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:hint="Subject for Notice"
                android:drawableLeft="@drawable/ic_date_range_green_36dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed" />

            <ImageView
                android:id="@+id/image_notice"
                android:layout_width="350dp"
                android:layout_height="190dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/subject_notice" />

            <EditText
                android:id="@+id/composed_message"
                android:layout_width="350dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image_notice"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:minLines="5"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:background="@drawable/button_selector"
                android:fontFamily="sans-serif-condensed"
                android:hint="Compose Message Body of Notice (Click on ImageView above to add image for notice)"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/contact"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_email_black_36dp"
            android:paddingVertical="10dp"
            android:background="@drawable/app_background"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/content_credentials"
            android:layout_marginBottom="-60dp"/>

        <TextView
            android:id="@+id/call"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add A Notice"
            android:layout_below="@+id/contact"
            android:layout_marginTop="60dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/content_credentials"
            android:layout_marginTop="-25dp">

            <Button
                android:id="@+id/save_photo"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Save Photo"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/button_selector_white"/>

            <Button
                android:id="@+id/submit"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/button_selector_white"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>